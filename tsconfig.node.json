{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/electron/main/**/*", "src/electron/preload/**/*", "src/common/**/*.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}
